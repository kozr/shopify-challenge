{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "module": "ES2020",
    "target": "ES2020",
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
